---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import "../styles/globals.css";
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
    </head>
    <body>
        <Navbar />
        <div class="fade-in default-layout"><slot /></div>
        <Footer />
    </body>
</html>
<style>
    body {
        height: 100vh;
    }
    .default-layout {
        display: flex;
        flex-direction: column;
        margin-bottom: 3rem;
        padding-left: 2rem;
        padding-right: 2rem;
        max-width: 900px;
        margin: auto;
    }
    .fade-in {
        animation: fadeIn 0.6s ease-in;
    }
    @keyframes fadeIn {
        0% {
            margin-top: 1rem;
            opacity: 0;
        }
        100% {
            margin-top: 0;
            opacity: 1;
        }
    }
    @media (max-width: 768px) {
        body {
            height: max-content;
        }
    }
</style>
